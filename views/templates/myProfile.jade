script(type='text/x-handlebars', data-template-name='my-profile')
  div.container
    div.row
      div.col-md-8.col-md-offset-2
        h3 My Profile

        table.table.table-bordered
          thead
            tr
              th User Name
              th First Name
              th Last Name
              th
          tbody
            tr
              td {{view.user.userName}}
              td {{view.user.firstName}}
              td {{view.user.lastName}}
              td <a {{action showEdit target="view"}} href="#">Edit</a>

  div#editUser(class='modal fade', data-backdrop="static", aria-hidden="true")
    div.modal-dialog
      div.modal-content
        div.modal-header
          <button class="close" {{action "cancelEdit" target="view"}}>&times;</button>
          h3 Edit My Profile
        div.modal-body
          div.row
            form(class='form-horizontal col-md-10 col-md-offset-1', role='form')
              div.register-group.form-group
                label.control-label First
                div.controls
                  div.input-prepend
                    span.add-on
                  {{view view.updateTextField valueBinding="view.editUser.firstName" placeholder="Enter your first name" class="form-control"}}
              div.register-group.form-group
                label.control-label Last
                div.controls
                  div.input-prepend
                    span.add-on
                  {{view view.updateTextField valueBinding="view.editUser.lastName" placeholder="Enter your last name" class="form-control"}}
        div.modal-footer
          <button class="btn" {{action "cancelEdit" target="view"}}>Cancel</button>
          <button class="btn btn-primary" {{action "updateUser" target="view"}}>Save</button>
